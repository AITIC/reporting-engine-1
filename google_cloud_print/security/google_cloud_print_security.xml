<?xml version="1.0"?>
<odoo noupdate="1">

    <record id="cupsprint_rule" model="ir.rule">
        <field name="name">CUPS Printer</field>
        <field name="model_id" ref="model_printing_printer"/>
        <field eval="True" name="global"/>
        <field name="domain_force">[('printer_type', '=', 'cups')]</field>
    </record>

    <record id="google_cloudprint_admin_rule" model="ir.rule">
        <field name="name">Google Cloud Print Admin</field>
        <field name="model_id" ref="model_printing_printer"/>
        <field eval="True" name="global"/>
        <field name="domain_force">[('printer_type', '=', 'gcp')]</field>
        <field name="groups" eval="[(4, ref('base.group_erp_manager'))]"/>
    </record>

    <record id="google_cloudprint_user_rule" model="ir.rule">
        <field name="name">Google Cloud Print Users</field>
        <field name="model_id" ref="model_printing_printer"/>
        <field eval="True" name="global"/>
        <field name="domain_force">[('printer_type', '=', 'gcp'), ('gc_user_id','=', user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

</odoo>
